execute pathogen#infect()

set nocompatible
filetype plugin indent on
set t_Co=256
syntax enable
set background=dark
colorscheme detailed
set number
set laststatus=2
filetype indent on
set nohlsearch
set incsearch
set ruler
set autoindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set nowrap
set colorcolumn=80
set backup
set backupdir=~/.vim/tmp
set directory=~/.vim/tmp
set wildmode=longest,list

let mapleader=","

noremap  <Up> ""
noremap! <Up> <Esc>
noremap  <Down> ""
noremap! <Down> <Esc>
noremap  <Left> ""
noremap! <Left> <Esc>
noremap  <Right> ""
noremap! <Right> <Esc>

nnoremap K i<CR><Esc>

map <C-w>l :bnext<cr>
map <C-w>h :bprevious<cr>

noremap te :tabf<Space>
noremap th :tabfirst<cr>
noremap tj :tabp<cr>
noremap tk :tabn<cr>
noremap tl :tablast<cr>
noremap J :tabp<cr>
noremap K :tabn<cr>

map <Esc>h :vertical resize -5<cr>
map <Esc>j :resize +5<cr>
map <Esc>k :resize -5<cr>
map <Esc>l :vertical resize +5<cr>

imap <f5> <esc> <f5>
imap <f6> <esc> <f6>
imap <f7> <esc> <f7>

runtime! macros/matchit.vim

autocmd BufNewFile,BufRead COMMIT_EDITMSG set colorcolumn=50,72
autocmd BufNewFile,BufRead *.haml set wrap
autocmd BufNewFile,BufRead *.slim set wrap
autocmd BufNewFile,BufRead *.md set wrap

autocmd BufNewFile,BufRead *.slim set syntax=slim

autocmd BufNewFile,BufRead Vagrantfile,Procfile,Guardfile,Gemfile set filetype=ruby
