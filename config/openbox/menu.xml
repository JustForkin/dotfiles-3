<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <item label="Xterm">
    <action name="Execute"><command>xterm</command></action>
  </item>
  <item label="Xterm (Large Font)">
    <action name="Execute"><command>xterm -fs 24</command></action>
  </item>
  <item label="Opera">
    <action name="Execute">
      <command>opera --new-window</command>
    </action>
  </item>
  <item label="Chrome">
    <action name="Execute">
      <command>google-chrome-stable</command>
    </action>
  </item>
  <separator label="System" />
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Detect displays">
    <action name="Execute"><command>~/bin/configure-xrandr</command></action>
  </item>
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
